{
  "cli": { "version": ">= 9.0.0" },
  "build": {
    "preview": {
      "android": { "buildType": "apk" },
      "node": "20.12.2",
      "env": {
        "NPM_CONFIG_LEGACY_PEER_DEPS": "1",
        "NPM_CONFIG_ENGINE_STRICT": "0"
      }
    },
    "development": {
      "developmentClient": true,
      "android": { "buildType": "apk" },
